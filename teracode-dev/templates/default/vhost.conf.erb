upstream phpfpm {
    server  unix:/tmp/fpm-sockets/teracode;
}

<% dirs = ['notes','research'] -%>
<% dirs.each { |dir| -%>
server {
    listen   80;

    location /nginx_status {
        stub_status on;
        access_log  off;
    }

    location /js/ {
        root        /www/<%=dir%>/current/www;
        access_log  off;
    }

    location /css/ {
        root        /www/<%=dir%>/current/www;
        access_log  off;
    }

    location /images/ {
        root        /www/<%=dir%>/current/www;
        access_log  off;
    }

    location / {
        error_page 404 /index.php;

        include /etc/nginx/fastcgi_params;

        fastcgi_pass  phpfpm;
        fastcgi_index index.php;

        fastcgi_param SCRIPT_FILENAME /www/<%=dir%>/current/www/index.php;

        index  index.php index.html index.htm;
    }
}
<% } -%>
