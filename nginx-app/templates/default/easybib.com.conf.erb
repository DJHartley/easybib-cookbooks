server {
    listen   80;
    server_name  <%= @deploy[:domains].first %>;

    location = /health_check.php {

        access_log  off;

        include /etc/nginx/fastcgi_params;

        fastcgi_pass  unix:/tmp/fpm-sockets/<%= node["nginx-app"][:user] %>;
        fastcgi_param SCRIPT_FILENAME <%= @deploy[:root] %>/current/www/health_check.php;
    }

    location = /DARTIframe.html {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location = /google8a01a818524239c8.html {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location = /googled16040836651a26a.html {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location /nginx_status {
        stub_status on;
        access_log  off;
    }

    location /js/ {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location /css/ {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location /new-images/ {
        root        <%= @deploy[:deploy_to] %>/current/www;
        access_log  off;
    }

    location / {
        error_page 404 /index.php;

        include /etc/nginx/fastcgi_params;

        fastcgi_pass  unix:/tmp/fpm-sockets/<%= node["nginx-app"][:user] %>;
        fastcgi_index index.php;

        fastcgi_param SCRIPT_FILENAME <%= @deploy[:deploy_to] %>/current/www/index.php;

        index  index.php index.html index.htm;
    }
}
