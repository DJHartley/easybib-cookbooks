<% if node[:scalarium][:instance][:roles].include?('nginxphpapp') %>

$ModLoad imfile
$InputFileName /var/log/nginx/error.log
$InputFileTag nginx:
$InputFileStateFile stat-nginx-error
$InputFileSeverity error
$InputRunFileMonitor

$InputFileName /var/log/php/slow.log
$InputFileTag slow:
$InputFileStateFile stat-fpm-slow
$InputFileSeverity notice
$InputRunFileMonitor

$InputFileName /var/log/php/fpm.log
$InputFileTag fpm:
$InputFileStateFile stat-fpm
$InputFileSeverity error
$InputRunFileMonitor

$InputFilePollingInterval 10

<% end %>

<% if node[:scalarium][:instance][:roles].include?('loadbalancer') %>

local0.*  <%= node[:syslog][:haproxy][:log_dir] %>/haproxy_0.log
local1.*  <%= node[:syslog][:haproxy][:log_dir] %>/haproxy_1.log

<% else %>

*.*    @@<%= node[:syslog][:host] %>:<%= node["loggly"]["port"] %>

<% end %>
